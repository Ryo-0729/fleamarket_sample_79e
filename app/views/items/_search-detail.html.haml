.LeftSide
  .LeftSide_Form
    = form_for "#" do |f|
      .SearchSort
        .SearchSort_Form
          .SearchSort_Form_Wrap
            %select.select-default{name: "sort_order"}
              %option{value: ""} 並び替え
              %option{value: "price_asc"}
                価格の安い順
              %option{value: "price_desc"}
                価格の高い順
              %option{value: "created_desc"}
                出品の新しい順
              %option{value: "like_desc"}
                いいね!の多い順
    .SearchDrop
      %h3 詳細検索
      .form-group
        %label
          %i.icon-plus
          %span キーワードを追加する
        %input.input-default{name: "keyword", placeholder: "例）値下げ", type: "text", value: ""}/
      .form-group
        %label
          %i.icon-plus
          %span カテゴリーを選択する
        %input.select-default{name: "category_root", placeholder: "すべて", type: "text", value: ""}/
      .form-group.search-extend-brand
        %label
          %i.icon-tag
          %span ブランド名から探す
        %input.input-default{"data-search": "brand", name: "brand_name", placeholder: "例）シャネル", type: "text", value: ""}/
        %input{name: "brand_id", type: "hidden", value: ""}/
        %ul{"data-search": "brand-dom"}
      .form-group
        %label
          %i.icon-size
          %span サイズを指定する
        .select-wrap{"data-search": "parent"}
          %i.icon-arrow-bottom
          %select.select-default{name: "size_group"}
            %option{value: ""} すべて
            %option{"data-root-id": "1", value: "1"} 洋服のサイズ
            %option{"data-root-id": "2", value: "2"} メンズ靴のサイズ
            %option{"data-root-id": "3", value: "3"} レディース靴のサイズ
            %option{"data-root-id": "6", value: "6"} スカートのサイズ
            %option{"data-root-id": "7", value: "7"} キッズ服のサイズ
            %option{"data-root-id": "8", value: "8"} ベビー・キッズ靴のサイズ
            %option{"data-root-id": "9", value: "9"} ベビー服のサイズ
            %option{"data-root-id": "14", value: "14"} テレビのサイズ
            %option{"data-root-id": "17", value: "17"} カメラレンズのサイズ
            %option{"data-root-id": "12", value: "12"} オートバイのサイズ
            %option{"data-root-id": "13", value: "13"} ヘルメットのサイズ
            %option{"data-root-id": "11", value: "11"} タイヤのサイズ
            %option{"data-root-id": "18", value: "18"} スキーのサイズ
            %option{"data-root-id": "15", value: "15"} スノーボードのサイズ

      .form-group.search-price
        %label
          %i.icon-coin
          %span 価格
        .select-wrap
          %i.icon-arrow-bottom
          %select.select-default{"data-search": "price", name: ""}
            %option{value: ""} 選択してください
            %option{value: "300-1000"}
              300 ~ 1000
            %option{value: "1000-5000"}
              1000 ~ 5000
            %option{value: "5000-10000"}
              5000 ~ 10000
            %option{value: "10000-30000"}
              10000 ~ 30000
            %option{value: "30000-50000"}
              30000 ~ 50000
            %option{value: "50000"}
              50000 ~
            %input.input-default{"data-search": "price-min", name: "price_min", placeholder: "¥ Min", type: "number", value: ""}/
            %span ~
            %input.input-default{"data-search": "price-max", name: "price_max", placeholder: "¥ Max", type: "number", value: ""}/
          .form-group.clearfix
            %label
              %i.icon-star
              %span 商品の状態
            %div
              .checkbox-default
                %input#condition_all{"data-search": "all", name: "condition_all", type: "checkbox", value: "1"}/
                %i.icon-check
                %label{for: "condition_all"} すべて
              .checkbox-default
                %input{id: "item_condition_id[1]", name: "item_condition_id[1]", type: "checkbox", value: "1"}/
                %i.icon-check
                %label{for: "item_condition_id[1]"} 新品、未使用
              .checkbox-default
                %input{id: "item_condition_id[2]", name: "item_condition_id[2]", type: "checkbox", value: "1"}/
                %i.icon-check
                %label{for: "item_condition_id[2]"} 未使用に近い
              .checkbox-default
                %input{id: "item_condition_id[3]", name: "item_condition_id[3]", type: "checkbox", value: "1"}/
                %i.icon-check
                %label{for: "item_condition_id[3]"} 目立った傷や汚れなし
              .checkbox-default
                %input{id: "item_condition_id[4]", name: "item_condition_id[4]", type: "checkbox", value: "1"}/
                %i.icon-check
                %label{for: "item_condition_id[4]"} やや傷や汚れあり
              .checkbox-default
                %input{id: "item_condition_id[5]", name: "item_condition_id[5]", type: "checkbox", value: "1"}/
                %i.icon-check
                %label{for: "item_condition_id[5]"} 傷や汚れあり
              .checkbox-default
                %input{id: "item_condition_id[6]", name: "item_condition_id[6]", type: "checkbox", value: "1"}/
                %i.icon-check
                %label{for: "item_condition_id[6]"} 全体的に状態が悪い
      .form-group.clearfix
        %label
          %i.icon-track
          %span 配送料の負担
        %div
          .checkbox-default
            %input#shipping_payer_all{"data-search": "all", name: "shipping_payer_all", type: "checkbox", value: "1"}/
            %i.icon-check
            %label{for: "shipping_payer_all"} すべて
          .checkbox-default
            %input{id: "shipping_payer_id[1]", name: "shipping_payer_id[1]", type: "checkbox", value: "1"}/
            %i.icon-check
            %label{for: "shipping_payer_id[1]"} 着払い(購入者負担)
          .checkbox-default
            %input{id: "shipping_payer_id[2]", name: "shipping_payer_id[2]", type: "checkbox", value: "1"}/
            %i.icon-check
            %label{for: "shipping_payer_id[2]"} 送料込み(出品者負担)
      .form-group.clearfix
        %label
          %i.icon-cart
          %span 販売状況
        %div
          .checkbox-default
            %input#status_all{"data-search": "all", name: "status_all", type: "checkbox", value: "1"}/
            %i.icon-check
            %label{for: "status_all"} すべて
          .checkbox-default
            %input#status_on_sale{name: "status_on_sale", type: "checkbox", value: "1"}/
            %i.icon-check
            %label{for: "status_on_sale"} 販売中
          .checkbox-default
            %input#status_trading_sold_out{name: "status_trading_sold_out", type: "checkbox", value: "1"}/
            %i.icon-check
            %label{for: "status_trading_sold_out"} 売り切れ
      .search-extend-btn.clearfix
        .btn-default.btn-gray{"data-search": "reset"} クリア
        %button.btn-default.btn-red{type: "submit"} 完了

